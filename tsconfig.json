{
  "compilerOptions": {
    "target": "es2017", /* Set by Rollup plugin */
    "module": "es2015", /* For Rollup */
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true
  }
}
